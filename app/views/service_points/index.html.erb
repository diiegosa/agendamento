

<div class="box box-default">
    <%= render 'layouts/helpers/search_box',
        model: :service_point,
        controller: :service_points,
        search_match: :city_cont,
        not_create: defined? not_create %>
    <div class="box-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th> <%= translate_attr(:name, :service_point) %> </th>
                    <th> <%= translate_attr(:city, :service_point) %> </th>
                    <th> <%= translate_attr(:neighborhood, :service_point) %> </th>
                    <th> <%= translate_attr(:public_area, :service_point) %> </th>
                    <th> <%= translate_attr(:cep, :service_point) %> </th>
                    <th> <%= translate_attr(:number, :service_point) %> </th>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                <% @service_points.each do |service_point| %>
                    <tr>
                        <td> <%= service_point.name %> </td>
                        <td> <%= service_point.city %> </td>
                        <td> <%= service_point.neighborhood %> </td>
                        <td> <%= service_point.public_area %> </td>
                        <td> <%= service_point.cep %> </td>
                        <td> <%= service_point.number %> </td>
                        <td align="center">
                            <%= link_to [:edit, service_point], class: 'btn btn-info btn-sm' do %>
                            <i class="fa fa-edit"></i>
                            <% end %>
                            <%= render 'layouts/helpers/delete', object: service_point, identification: :city %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>


