<div class="box box-default">
    <%= render 'layouts/helpers/search_box',
        model: :service,
        controller: :services,
        search_match: :document_cont,
        not_create: defined? not_create %>
    <div class="box-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th> <%= translate_attr(:novo_sga_service, :service) %> </th>
                    <th> <%= translate_attr(:document, :service) %> </th>
                <th colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                <% @services.each do |service| %>
                    <tr>
                        <td> <%= service.name %> </td>
                        <td> <%= service.document %> </td>

                        <td align="center">
                            <%= link_to [:edit, service], class: 'btn btn-info btn-sm' do %>
                            <i class="fa fa-edit"></i>
                            <% end %>
                            <%= render 'layouts/helpers/delete', object: service, identification: :document %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

