<% content_for :expert_availabilities_form do %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Data *</label>
    <div class="col-sm-9">
      <div class="col-md-5">
          <div class="form-group">
              <div class="input-group date" id="datetimepicker6">
                  <input type="text" name="initial_date" class="form-control" placeholder="Inicial" required />
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
          </div>
      </div>
      <div class="col-md-2">
          <p align="center">-</p>
      </div>
      <div class="col-md-5">
        <div class="form-group">
          <div class="input-group date" id="datetimepicker7">
            <input type="text" name="final_date" class="form-control" placeholder="Final" required />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    $(function () {
        $('#datetimepicker6').datetimepicker({
              format: 'DD/MM/YYYY',
              locale: 'pt-br',
              useCurrent: false
        });
        $('#datetimepicker7').datetimepicker({
              format: 'DD/MM/YYYY',
              locale: 'pt-br',
              useCurrent: false //Important! See issue #1075
        });
        $("#datetimepicker6").on("dp.change", function (e) {
            $('#datetimepicker7').data("DateTimePicker").minDate(e.date);
        });
        $("#datetimepicker7").on("dp.change", function (e) {
            $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
        });
    });
</script>
<% end %>

<%= render template: "expert_availabilities/form", locals: {action: :create} %>
